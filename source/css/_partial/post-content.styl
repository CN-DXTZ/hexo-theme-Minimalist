// post内容，即markdown渲染
.posts .post .post-content{
    margin: 1vw 0;
	width: 100%;

	//  链接
	a {
		color: color-green-comp8;
		text-decoration: none;

		&:hover	{
			color: color-orange8;
		}

		position: relative;
        &::after{
            content: '';
            position: absolute;
            top: 110%;
            left: 0;
            width: 100%;
            height: .2vh;
            background-color: color-orange8;
            transform: scale(0);
            transition: 0.5s;
            transform-origin: center;
        }
        &:hover::after{
            transform: scale(1);
        }
	}
	
	// 标题
	// 一级标题不用序号
	h1 { 
		font-size: 2.5vw;
	}
	// 前序标题，必须从二级开始
	// 二级标题计数 全局初始化
	counter-reset: H2;
	h2 {
		font-size: 2.3vw;
		counter-reset: H3;	
		:before {
			counter-increment: H2;
			content: counter(H2) " ";
		}
	}
	h3 {
		font-size: 2.1vw;
		counter-reset: H4;	
		:before {
			counter-increment: H3;
			content: counter(H2) "." counter(H3) " ";
		}
	}
	h4 {
		font-size: 1.9vw;
		counter-reset: H5;	
		:before {
			counter-increment: H4;
			content: counter(H2) "." counter(H3) "." counter(H4) " ";
		}
	}
	h5 {
		font-size: 1.7vw;
		counter-reset: H6;	
		:before {
			counter-increment: H5;
			content: counter(H2) "." counter(H3) "." counter(H4) "." counter(H5) " ";
		}
	}
	h6{
		font-size: 1.5vw;
		:before {
			counter-increment: H6;
			content: counter(H2) "." counter(H3) "." counter(H4) "." counter(H5) "." counter(H6) " ";
		}
	}
	h2,h3,h4,h5,h6 {
		&:hover :before{
			color: color-orange5;
		}
	}

	// 分割线
	hr{
		border: 1px solid color-green4;
	}

	// 无序列表 <ul><li></ul> <ul><li></ul>
	ul {
		padding-inline-start: 1.4vw; // 空 1 个字
		>li {
			list-style-type: none;
			text-indent: -0.7vw; // 首行将 before 挤占的空间预留出来

			// 第一级：实心圆
			&::before {
				content:"\e75b"; 
				font-family: "iconfont" !important;
				color:  color-green5;
				font-weight: bold;
				display: inline-block;
				position: relative;
				right: .1vw;
			}

			>ul>li {
				// 第二级：空心圆加内点
				&::before {
					content:"\e7c2";
				}

				>ul>li {
					// 第三级：粗空心圆
					&::before {
						content:"\e63e";
					}

					// 第四级：细空心圆
					>ul>li::before {
						content:"\e63c";
					}
				}
			}

			&:hover::before{
				color: color-orange5;
			}
		}
	}

	// 有序列表 <ol><li><li><li></ol>
	// 第一级：1.
	ol {
		counter-reset: OL1;
		padding-inline-start: 1.4vw; // 空 1 个字
		>li {
			list-style-type: none;
			text-indent: -1.4vw; // 首行将 before 挤占的空间预留出来

			counter-increment: OL1;
			&::before {
				content: counter(OL1) ". "; 
				color:  color-green5;
				font-weight: bold;
				font-size: 1.5vw;
			}

			// 第二级 (1)
			>ol {
				counter-reset: OL2;
				>li {
					counter-increment: OL2;
					&::before {
						content: "(" counter(OL2) ") "; 
					}

					// 第三级 a)
					>ol {
						counter-reset: OL3;
						>li {
							counter-increment: OL3;
							&::before {
								content: counter(OL3, lower-alpha) ") "; 
							}

							// 第四级 a)
							>ol {
								counter-reset: OL4;
								>li {
									counter-increment: OL4;
									&::before {
										content: counter(OL4, lower-roman) ". "; 
									}
								}
							}
						}
					}
				}
			}

			&:hover::before{
				color: color-orange5;
			}
		}
	}

	// 块引用
	blockquote {
		margin-inline-start: 0.7vw;
		padding: 0 0 0 0.7vw;
		width: 96%;
		border-left: .4vw solid color-green5;
		border-radius: .4vw;
		background-color: color-green12-4;
		list-style: none;

		p {
			padding: 0.7vw 0 0.5vw 0;
		}

		>ul, >ol {
			margin-block-start: -1vw;
		}

		blockquote {
			// 块引用嵌套间距
			margin-block-start: -1.2vw;
			margin-block-end: -1.2vw;
			border-left: .4vw solid color-green4;
			background-color: color-green12-2;
		
			blockquote {
				border-left: .4vw solid color-green3;
				background-color: color-green01-6;

				blockquote {
					border-left: .4vw solid color-green2;
					background-color: color-green01-4;
				}
			}
		}
		&:hover {
			border-color: color-orange4;
		}
	}
		
	// 短代码 <code></code>
	// 代码块 <pre><code></code></pre> （用 prism 渲染）
	// code.js 添加短代码<code>类名 littleCode 用以区分
	.littleCode{
		font-size: 1.3vw;
		padding: .2vw .4vw;
		margin: 0 .4vw;
		border: .1vw solid color-green2;
		border-radius: .5vw;
		background-color: color-green2;
	}	

	// 图片
	img {
		max-width: 95%;
		display: block;
		margin: 0 auto;
		transition: 0.5s ease;
		&:hover {
			transform: scale(1.05);
		}
	}	
	
	// 表格 
	table {
		width: 100%;
		border-collapse: collapse;
		padding: 1vw;
		thead{
			background-color: color-green2;
			font-weight: bold;
			border-top: .1vw solid color-font;
			border-bottom: .1vw solid color-font;
			padding: 3vw 0;
			
		}
		th{
				padding: 0.3vw 0;
		}
		tbody tr{
			&:nth-child(odd){
				background-color: color-green12-2;
			}
			background-color: color-green12-5;
		}
		td{
			padding: 0.25vw 0;
			line-height: 1.8vw;
		}	
		border-bottom: .1vw solid color-font;
	}
}
