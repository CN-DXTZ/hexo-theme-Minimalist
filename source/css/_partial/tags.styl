// 标签云主页面
.tags-main-container{
	display: flex;
    flex-direction: column;
    align-items: center;

	margin: 12vw 11vw;  
	padding: 6vw; 
    
    background: color-green1;
    
    border-top: .75vh solid color-green5;
    border-radius: 1vw;

    box-shadow: 0.1vw 0.15vw 0.25vw 0.1vw color-shadow;
    transition: 0.5s;

	&:hover{
        box-shadow: 0 0 2vw 1vw color-shadow;
    }

	.tags-tagscloud{
		a {
			display: inline-block;
			color: color-font;
			text-decoration: none;
			margin: .4vw .8vw;
			transition: .5s;

			&:hover{
				color: color-orange9;
			}

			position: relative;
			&::after{
				content: '';
				position: absolute;
				top: 100%;
				left: 0;
				width: 100%;
				height: .3vh;
				background-color: color-orange8;
				transform: scale(0);
				transition: 0.5s;
				transform-origin: center;
			}
			&:hover::after{
				transform: scale(1);
			}
		}
	}
}

// 标签子页面
.tag-page-container{
	width: 100%;
	display: flex;
    flex-direction: column;
    align-items: center;

	.tag-page-title{
		padding-top: 9vw; 
		max-width: 100%;
		display: block;
		margin: 0 auto;
		.tag_title{
			color: color-fonts;
			font-size: 2.5vw;	
		}
		.iconfont {
			font-size: 2.3vw;	
			margin-right: .5vw; 
		}
	}	
}

