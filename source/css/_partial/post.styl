// 单篇post框
// 首页单独下移
main>.posts {
    margin-top: 12vw;
}
.posts .post {
    margin: 1vw 11vw 9vw 11vw ; 
    padding-left: 8.4vw; 
    padding-right: 7.7vw; 
    
    background: color-green1;

    display: flex;
    flex-direction: column;
    align-items: center;
    
    border-top: .75vh solid color-green5;
    border-radius: 1vw;

    box-shadow: 0.1vw 0.15vw 0.25vw 0.1vw color-shadow;
    transition: 0.5s;

    &:hover{
        box-shadow: 0 0 2vw 1vw color-shadow;
    }
}