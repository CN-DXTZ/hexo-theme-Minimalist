.posts .post .post-header{
    width: 100%
    display: flex;
    flex-direction: column;
    align-items: center;

    .post-title {
        margin: 2.5vw 0 0.5vw 0;

        .post-title-link {
            color: color-font;
            font-size: 2.5vw;
            font-weight: bold;
            text-decoration: none;
            transition: 0.5s;

            &:hover{
                color: color-orange8;
                font-size: 2.7vw;
            }

            position: relative;
            &::after{
                content: '';
                position: absolute;
                top: 110%;
                left: 0;
                width: 100%;
                height: .4vh;
                background-color: color-orange8;
                transform: scale(0);
                transition: 0.5s;
                transform-origin: center;
            }
            &:hover::after{
                transform: scale(1);
            }
        }
    }

    .post-info {
        color: color-green7;
        span{
            margin-right: 1.5vw;
        }
        .fa{
            margin-left: 1.5vw;
        }
        i{
            font-size: 1.6vw;
        }
    }    


    .post-belong {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: color-green7;
        margin: .6vw;
        line-height: 3vw;

        span{
            margin-right: .75vw;
        }

        i{
            font-size: 1.6vw;
            margin-right: .5vw;
            vertical-align: middle;
            padding-bottom: .2vw;
        }

        a{
            color: color-green8;
            text-decoration: none;
            padding: .2vw .5vw;
            border: .1vw solid color-green5;
            border-radius: .5vw;

            transition: 0.5s;
            &:hover{
                color: white;
                background-color: color-orange4;
                border-color: color-orange4;
            }
        }
        .post-tags a{
            margin-right: .75vw;
        }
        .post-categories {
            margin-right: 1vw;
        }
    }   
}